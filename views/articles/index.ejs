<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>My Blog</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }
        header {
            background: #333;
            color: #fff;
            padding-top: 30px;
            min-height: 70px;
            border-bottom: #77aaff 3px solid;
        }
        header a {
            color: #fff;
            text-decoration: none;
            text-transform: uppercase;
            font-size: 16px;
        }
        header ul {
            padding: 0;
            list-style: none;
        }
        header li {
            float: left;
            display: inline;
            padding: 0 20px 0 20px;
        }
        header #branding {
            float: left;
        }
        header #branding h1 {
            margin: 0;
        }
        header nav {
            float: right;
            margin-top: 10px;
        }
        .button {
            display: inline-block;
            color: #fff;
            background: #333;
            padding: 10px 20px;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
        }
        .button:hover {
            background: #555;
        }
        .articles {
            margin: 20px 0;
        }
        .article {
            background: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .article h2 {
            margin-bottom: 5px;
        }
        .article .date {
            color: #777;
            font-size: 0.9em;
            margin-bottom: 10px;
        }
        .article-buttons {
            margin-top: 10px;
        }
        .article-buttons a {
            margin-right: 10px;
        }
        @media (max-width: 768px) {
            .container {
                width: 100%;
                padding: 0 10px;
            }
            header {
                text-align: center;
            }
            header nav {
                float: none;
                margin-top: 0;
            }
            header ul {
                text-align: center;
            }
            header li {
                float: none;
                display: block;
                padding: 10px 0;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div id="branding">
                <h1>Nitin Blog</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <a href="/articles/new" class="button">Create Article</a>
        
        <% articles.forEach(article =>{%>
        <div class="articles">
            <div class="article">
                <h2><%=article.title%></h2>
                <p class="date"><%=article.createdAt.toLocaleDateString()%></p>
                <p><%=article.description%></p>
                <div class="article-buttons">
                    <a href="articles/<%=article.slug%>" class="button">Read More</a>
                    <a href="articles/edit/<%=article.id%>" class="button">Edit Post</a>
                    <form action="articles/<%=article.id%>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <%})%>
    </div>
</body>
</html>