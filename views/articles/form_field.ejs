<div class="form-group">
    <label for="title">Title</label>
    <input value="<%=article.title%>" type="text" id="title" name="title" required>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description"><%=article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown Content</label>
    <textarea id="markdown" name="markdown" required><%=article.markdown%></textarea>
</div>
<div class="form-group">
    <button type="submit">Submit</button>
</div>